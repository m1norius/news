<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textAlignment="center"
            android:id="@+id/id_txt_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:ellipsize="end"
            android:lines="3"
            android:textColor="@android:color/black"
            tools:text="Title" />

        <TextView
            android:id="@+id/id_txt_item_region"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/id_txt_item_title"
            android:layout_below="@+id/id_txt_item_title"
            android:ellipsize="end"
            android:lines="1"
            tools:text="World" />

        <TextView
            android:id="@+id/id_txt_item_date"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/id_txt_item_title"
            android:layout_below="@+id/id_txt_item_title"
            android:lines="1"
            android:textAlignment="textEnd"
            tools:text="22.12.2017" />

    </RelativeLayout>

</android.support.v7.widget.CardView>